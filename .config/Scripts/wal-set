#!/usr/bin/env bash
#
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal

# Source generated colors.
. "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst \
        -lb "${color5:-#FFFFFF}" \
        -nb "${color1:-#FFFFFF}" \
        -cb "${color7:-#FFFFFF}" \
        -lf "${color0:-#000000}" \
        -bf "${color0:-#000000}" \
        -cf "${color0:-#000000}" \
        -nf "${color0:-#000000}" \
        -fn "Misc Ohsnap 12" &
}

main() {
    reload_dunst &
    # set_scss &
}

main
